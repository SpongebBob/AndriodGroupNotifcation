<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef3f5"
    android:orientation="vertical"
    tools:context=".GroupNotificationMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#106bb9">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群通知"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/tt_top_back" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_create_new"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/add" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_btn_receive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_tab_sel"
            android:gravity="center"
            android:text="我收到的"
            android:textColor="@color/my_tab_sel_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tab_btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="我发出的"
            android:textColor="#313131"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/receivenotification_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eef3f5"
        android:divider="#eef3f5"
        android:dividerHeight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp"
        android:scrollbars="none"
        android:textFilterEnabled="false"
        android:visibility="visible" />

    <ListView
        android:id="@+id/mynotification_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:background="#eef3f5"
        android:divider="#eef3f5"
        android:dividerHeight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp"
        android:scrollbars="none"
        android:textFilterEnabled="false"
        android:visibility="gone" />
</LinearLayout>
